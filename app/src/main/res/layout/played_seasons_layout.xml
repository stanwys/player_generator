<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Played seasons:"
            android:layout_height="40dp" android:id="@+id/playedSeasonsTextView"
            android:layout_weight="2" android:layout_width="105dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            android:layout_marginTop="5dp" android:gravity="center_vertical"/>
    <TextView
            android:layout_width="23dp"
            android:layout_height="40dp" android:id="@+id/playedSeasonsValueText"
            android:layout_weight="1"
            android:gravity="center_vertical" app:layout_constraintStart_toEndOf="@+id/playedSeasonsTextView"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="previous"
            android:layout_width="103dp"
            android:layout_height="42dp" android:id="@+id/prevSeasonButton"
            android:layout_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/playedSeasonsValueText" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="next"
            android:layout_width="90dp"
            android:layout_height="42dp" android:id="@+id/nextSeasonButton"
            android:layout_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/prevSeasonButton" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Games in season:"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:id="@+id/gamesSeasonTextView" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/playedSeasonsTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:gravity="center_vertical"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/gamesPlayedEditText"
            android:text="40" app:layout_constraintStart_toEndOf="@+id/gamesSeasonTextView"
            android:layout_marginStart="5dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/playedSeasonsValueText" android:gravity="center_vertical"
            android:textSize="16sp"/>
    <TextView
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/textView2"
            android:gravity="center_vertical" app:layout_constraintEnd_toStartOf="@+id/textView4"
            android:layout_marginEnd="30dp" android:layout_marginRight="30dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/prevSeasonButton"
    />
    <TextView
            android:text="Improve Points"
            android:layout_width="68dp"
            android:layout_height="40dp" android:id="@+id/textView3" android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/nextSeasonButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="New"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/textView4" android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginEnd="23dp" android:layout_marginRight="23dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/nextSeasonButton"/>

</android.support.constraint.ConstraintLayout>