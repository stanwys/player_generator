<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_generate_player"
        tools:context=".GeneratePlayer">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/shirtNameEditText"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/nameEditText"
            app:layout_constraintStart_toEndOf="@+id/shirtNameTextView" android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:text="Weight"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/weightTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/heightTextView" android:gravity="center"/>
    <TextView
            android:text="Injury Tolerance"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/injuryTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:gravity="center"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/sideTextView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/heightEditText"
            app:layout_constraintStart_toEndOf="@+id/heightTextView" android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText" android:numeric="integer"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/injurySpinner"/>
    <EditText
            android:layout_width="wrap_content"
            android:ems="10"
            android:id="@+id/weightEditText"
            app:layout_constraintStart_toEndOf="@+id/weightTextView" android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/heightEditText" android:layout_height="50dp"
            android:numeric="integer" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:inputType="number"/>
    <TextView
            android:text="Nationality"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/nationalityTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:gravity="center" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/footTextView"/>
    <TextView
            android:text="Name"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>
    <TextView
            android:text="Shirt Name"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/shirtNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Foot"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/footTextView"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/weightTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:gravity="center"/>
    <TextView
            android:text="Position"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/positionTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/nationalityTextView"
            android:gravity="center"/>
    <Spinner
            android:entries="@array/nationality_array"
            android:prompt="@string/nationality_prompt"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:id="@+id/nationalitySpinner"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintStart_toStartOf="parent" android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/footSpinner"/>
    <Spinner
            android:entries="@array/betterfoot_array"
            android:prompt="@string/betterfoot_prompt"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:id="@+id/footSpinner"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintStart_toStartOf="parent" android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/weightEditText"/>
    <Spinner
            android:prompt="@string/side_prompt"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:id="@+id/sideSpinner"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintStart_toStartOf="parent"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.551" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/positionSpinner"/>
    <Spinner
            android:entries="@array/injury_tolerance_array"
            android:prompt="@string/injury_tolerance_prompt"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:id="@+id/injurySpinner"
            android:spinnerMode="dialog"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sideSpinner" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameEditText" app:layout_constraintStart_toEndOf="@+id/nameTextView"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Spinner
            android:entries="@array/position_array"
            android:prompt="@string/position_prompt"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:id="@+id/positionSpinner"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nationalitySpinner" android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Height"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/heightTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/shirtNameTextView"/>
    <TextView
            android:text="Side"
            android:layout_width="80dp"
            android:layout_height="50dp" android:id="@+id/sideTextView"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/positionTextView" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"/>
</android.support.constraint.ConstraintLayout>