<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_generate_player2"
        tools:context=".GeneratePlayer3">

    <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/speedValueText"
            android:paddingLeft="10dp" android:paddingRight="10dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/speedTextView"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/powerValueText"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/stamValueText"
            android:paddingLeft="10dp" android:paddingRight="10dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/speedValueText"
            app:layout_constraintStart_toEndOf="@+id/stamTextView"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/teckickPlusButton" android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/teckickMinusButton" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/tecdribPlusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/teckickPlusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/tecdribMinusButton" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/balPlusButton" android:textSize="25sp"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/balMinusButton" android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tecdribPlusButton"
            android:padding="0dp"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/powerPlusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/balPlusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/powerMinusButton" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/speedPlusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/powerPlusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/speedMinusButton" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/stamPlusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/speedPlusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/stamMinusButton" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/teckickMinusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" android:padding="0dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/tecdribMinusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/teckickMinusButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" android:padding="0dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/balMinusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tecdribMinusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/powerMinusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/balMinusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/speedMinusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/powerMinusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <Button
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="40dp" android:id="@+id/stamMinusButton" android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/speedMinusButton" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="30dp"
            android:padding="0dp"/>
    <TextView
            android:text="Technique (kicking)"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/teckickTextView" android:gravity="center_vertical"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    <TextView
            android:text="Technique (dribbling)"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/tecdribTextView" android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teckickTextView" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:paddingLeft="10dp" android:paddingRight="10dp"
    />
    <TextView
            android:text="Balance"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/balTextView" android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tecdribTextView"
            android:paddingLeft="10dp" android:paddingRight="10dp"/>
    <TextView
            android:text="Power"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/powerTextView" android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/balTextView"
            android:paddingLeft="10dp" android:paddingRight="10dp"/>
    <TextView
            android:text="Speed"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/speedTextView" android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/powerTextView" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:paddingLeft="10dp" android:paddingRight="10dp"/>
    <TextView
            android:text="Stamina"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/stamTextView" android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speedTextView" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:paddingLeft="10dp" android:paddingRight="10dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/teckickValueText" app:layout_constraintStart_toEndOf="@+id/teckickTextView"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:gravity="center_vertical"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/tecdribValueText"
            android:paddingLeft="10dp" android:paddingRight="10dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/tecdribTextView"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/teckickValueText"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/balValueText"
            android:paddingLeft="10dp" android:paddingRight="10dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/balTextView"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tecdribValueText"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/powerValueText"
            android:paddingLeft="10dp" android:paddingRight="10dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/balValueText"
            app:layout_constraintStart_toEndOf="@+id/powerTextView" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>