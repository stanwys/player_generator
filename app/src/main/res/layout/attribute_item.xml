<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/attributeNameTextView" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:gravity="center_vertical" android:layout_weight="3"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/startValueTextView" android:gravity="center_vertical"
            android:layout_weight="1" android:paddingLeft="10dp" android:paddingRight="10dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/newValueTextView" android:gravity="center_vertical"
            android:layout_weight="1" android:paddingLeft="10dp" android:paddingRight="10dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/improvPointsTextView" android:gravity="center_vertical"
            android:layout_weight="1.5" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:textStyle="bold"/>
</LinearLayout>